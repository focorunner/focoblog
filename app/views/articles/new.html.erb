<% provide(:title, "New Article") %>

<main class="row">
  <article class="col-md-8 col-md-offset-2">
  <%= form_for(@article) do |f| %>

  <%= render 'fields', f: f %>

  <%= f.submit "Create Article", class: 'btn btn-primary' %>

  <div id="form_reset" class="center">
    <%= button_tag "Reset", type: :reset, class: 'center btn btn-default' %>
    <small><%= link_to 'Cancel', :back %></small>
  </div>

  <% end %>
  </article>
</main>