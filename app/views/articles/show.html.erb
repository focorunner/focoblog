<% provide(:title, @article.title) %>

<main class="row">

  <article class="col-md-8 col-sm-8">
    <div class="back_link">
        <small>
          <%= link_to articles_path do %>
            <i class="glyphicon glyphicon-arrow-left"></i> Back to Index
          <% end %>
        </small>
    </div>
    <div id="article" style="border-bottom: 1px solid black;">
      <h1><%= article_title(@article) %></h1>
      <div class="tags">
          <small>
            Tags:
            <% if @article.tags.present? %>
              <% @article.tags.each do |tag| %>
                <%= link_to tag.name, tag_path(tag), class: "btn btn-default" %>
              <% end %>
            <% else %>
              none
            <% end %>
          </small>
      </div>  
      <p><%= kramdown @article.body %></p>
      <small>
        Created <%= @article.created_at.strftime("%-m/%-d/%Y %-I:%M%p (%Z)") %> | 
        Last Updated <%= @article.updated_at.strftime("%-m/%-d/%Y %-I:%M%p (%Z)") %>
        <% if logged_in? && current_user.admin? %>
           | <%= link_to 'Edit', edit_article_path %>
           | <%= link_to 'Delete', article_path,
                    method: :delete,
                    data: { confirm: 'Delete Article... Are you sure?' } %>
        <% end %>
      </small>
    </div>

    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 col-xs-12">
        <div id="comments">      
          <h3>Comments</h3>
            <%= render 'comment' %>
          <div class="panel panel-default">
              <% if logged_in? %>
                <%= render partial: 'comments/form' %>
              <% else %>
                <div class="center"><%= link_to 'Log in', login_path %> to add comments.</div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
     
    <br>
    <div class="back_link">
        <small>
          <%= link_to articles_path do %>
            <i class="glyphicon glyphicon-arrow-left"></i> Back to Index
          <% end %>
        </small>
    </div>

  </article>

  <%= render 'aside' %>
  
</main>