<% provide(:title, @user.name) %>

<main class="row">
  <aside class="col-md-4 col-md-offset-4">
    <section class="user_info">
      <div>
        <%= gravatar_for @user, size: 150 %>   
        <h1>
          <%= @user.name %>
        </h1>
        <%= link_to 'Edit Profile', edit_user_path(@user) %>
      </div>
    </section>
  </aside>
</main>