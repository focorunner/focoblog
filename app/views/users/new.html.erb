<% provide(:title, 'Sign up') %>

<main class="row">

<h1 class="center">Sign up</h1>
  <div class="col-md-6 col-md-offset-3">
    <div class="formbox">
      <%= form_for(@user) do |f| %>
        <%= render 'fields', f: f %>
        <%= f.submit "Create my account", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</main>
